<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hospital.View.PatientView"
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="hospital.View.PatientView.PatientCalendar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PatientCalendar">

    <Grid>

        <syncfusion:SfScheduler x:Name="appointmentCalendar" ItemsSource="{Binding Appointments}" AppointmentEditFlag="None" HorizontalAlignment="Right" Margin="0,0,10,20" ViewType="Week" VerticalAlignment="Bottom" Height="430" Width="780" AllowedViewTypes="Week">
            <syncfusion:SfScheduler.MonthViewSettings>
                <syncfusion:MonthViewSettings AppointmentDisplayMode="Appointment" AppointmentDisplayCount="5"/>
            </syncfusion:SfScheduler.MonthViewSettings>
        </syncfusion:SfScheduler>
    </Grid>
</Page>
